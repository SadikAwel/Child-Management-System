CREATE TABLE parent (
    parent_id INT AUTO_INCREMENT PRIMARY KEY,          -- unique parent ID
    first_name VARCHAR(50) NOT NULL,
    middle_name VARCHAR(50),
    last_name VARCHAR(50) NOT NULL,
    gender ENUM('Male', 'Female', 'Other'),
    birth_date DATE NOT NULL,                          -- parentâ€™s birth date
    age INT CHECK (age >= 18 AND age <= 120),          -- must be adult
    relation_to_student ENUM('Father','Mother','Guardian','Other') NOT NULL,
    email VARCHAR(100) UNIQUE,
    phone_number VARCHAR(20) UNIQUE NOT NULL,
    occupation VARCHAR(100),                           -- job / profession
    address TEXT,
    
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP 
                 ON UPDATE CURRENT_TIMESTAMP
);
